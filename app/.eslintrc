{
  "parser": "babel-eslint",
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
  ],
  "globals": {
    "web3": true
  },
  "rules": {
    "no-console": 0,
    "no-debugger": 0,
    "react/prop-types": 0,
    "no-trailing-spaces": "error",
    "react/no-find-dom-node": 0,
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
